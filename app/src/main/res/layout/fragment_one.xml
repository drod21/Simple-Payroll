<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.drod2169.payroll.OneFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/employee_name"
        android:textSize="18sp"
        android:id="@+id/name"
        android:layout_above="@+id/empName"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="12dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="@string/name_ph"
        android:ems="10"
        android:id="@+id/empName"
        android:layout_above="@+id/textView2"
        android:layout_alignStart="@+id/name"
        android:layout_marginBottom="13dp" />

    <TextView
        android:text="@string/name_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="18sp"
        android:layout_above="@+id/hours"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="12dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hours_worked"
        android:text="@string/hours"
        android:layout_alignBottom="@+id/payRate"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="65dp" />

    <Button
        android:layout_height="wrap_content"
        android:id="@+id/hours"
        android:layout_width="wrap_content"
        android:text="@string/hours"
        android:onClick="hours"
        android:layout_above="@+id/hours_worked"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:text="@string/pay_rate"
        android:ems="10"
        android:id="@+id/payRate"
        android:layout_above="@+id/weekPay"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp" />

    <Button
        android:text="@string/weekpay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weekPay"
        android:onClick="pay"
        android:layout_above="@+id/pay"
        android:layout_alignEnd="@+id/empName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pay"
        android:textSize="20sp"
        android:text="@string/pay"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/weekPay" />



</RelativeLayout>
